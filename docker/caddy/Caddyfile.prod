{
    auto_https off
}

:80 {
    root * /srv/app/public
    encode zstd gzip

    # API + Admin page -> Symfony (PHP-FPM)
    @symfony path /api/* /admin/*
    handle @symfony {
        # Let Symfony's front controller handle API routes
        rewrite * /index.php
        php_fastcgi php:9000
    }

    # Static assets + React SPA fallback
    handle {
        try_files {path} /index.html
        file_server
    }
}